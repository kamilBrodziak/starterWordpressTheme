<picture class="imgContainer flexCentered">
    {% if img %}
        {% for size in img.sizes|keys %}
            <source{% if img.sizes[size].width %} media="(max-width:{{ img.sizes[size].width }})"{% endif %}
                    srcset="{{ img.sizes[size].src }}.webp" type="image/webp">
        {% endfor %}
        <img alt="{{ img.alt }}" srcset="{{ img.srcSet }}" src="{{ img.sizes.full.src }}">
    {% endif %}
</picture>